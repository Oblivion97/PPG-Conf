<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.f.schMon.conf.view.VenueActivity">

        <include layout="@layout/toolbar" />


        <!--room -->
        <LinearLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="19dp"
                android:gravity="center"
                android:text="North South University"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                android:textColor="@color/tabBckgrnd"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Room: "
                android:textStyle="bold|italic"
                android:textColor="@color/perf21to40"/>


            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Auditorium 801\n Inaugural Session"
                android:textStyle="bold|italic"
                android:textColor="@color/txtViewTxtLight"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NAC 640\n SBE Conference Room  Parallel Session "
                android:textStyle="bold|italic"
                android:textColor="@color/txtViewTxtLight"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NAC 1058\n PPG Conference Room Parallel Session "
                android:textStyle="bold|italic"
                android:textColor="@color/txtViewTxtLight"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SAC 620\n SEPS &amp; SHLS Conference Room Parallel Session"
                android:textStyle="bold|italic"
                android:textColor="@color/txtViewTxtLight"/>


            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Syndicate Hall\n Parallel Session and Closing Session"
                android:textStyle="bold|italic"
                android:textColor="@color/txtViewTxtLight"/>
        </LinearLayout>

    </LinearLayout>


    <include layout="@layout/nav_drawer_body" />


</android.support.v4.widget.DrawerLayout>
